div.col-md-6.col-md-offset-3

    span(ng-if="vm.dataLoading", us-spinner)
    h2.text-center {{ "forgot password" | translate }}

    form(name="form", ng-submit="vm.forget()", role="form")

        div.form-group
            label(for="username") {{ "Login" | translate }}

            input#username.form-control(type="text", name="username", ng-model="vm.user.username" required)
            span.help-block(ng-show="form.username.$dirty && form.username.$error.required") {{ "Login needed" | translate }}

        div.form-actions
            button.btn.btn-primary(type="submit", ng-disabled="form.$invalid || vm.dataLoading") {{ "Send" | translate }}
            a.btn.btn-link(href="#/login") {{ "Cancel" | translate }}