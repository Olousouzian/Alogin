div.modal.fade
    div.modal-dialog
        div.modal-content
            div.modal-header
                button.close(type="button", ng-click="close(false)", data-dismiss="modal", aria-hidden="true") &times;
                h4.modal-title {{ "Delete ?" | translate }}
            div.modal-body
                p {{ " Do you want to delete this news" | translate }}
            div.modal-footer
                button.btn.btn-default(type="button", ng-click="close(false)", data-dismiss="modal") {{ "No" | translate }}
                button.btn.btn-primary(type="button", ng-click="close(true)", data-dismiss="modal") {{ "Yes" | translate }}