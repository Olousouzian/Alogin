div(ng-controller="MenuController")
    nav.navbar.navbar-default
        div.container-fluid

            div.navbar-header
                button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1", aria-expanded="false")
                    span.sr-only {{ "Toggle navigation" | translate }}
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="#") Menu

            div#bs-example-navbar-collapse-1.collapse.navbar-collapse

                ul.nav.navbar-nav
                    li.active
                        a(href="#/") {{ "Tableau de bord" | translate }}
                            span.sr-only {{ "(current)" | translate }}
                    li
                        a(href="#/navigation") {{ "Navigation" | translate }}
                    li
                        a(href="#/message") {{ "Timeline" | translate }}
                    li
                        a(href="#/news") {{ "News" | translate }}
                    li
                        a(href="#/inspirations") {{ "Inspirations" | translate }}
                    li
                        a(href="#/tree") {{ "tree" | translate }}
                    li.dropdown
                        form.navbar-form.navbar-left(role="search")
                            div.form-group
                                input(type="text", ng-model="search_expression", ng-model-options="{ debounce: 1000 }", ng-change="search()", ng-focus="setSearchResults(true)", ng-blur="setSearchResults(false)", placeholder="{{ 'Search' | translate }}")
                            ul.dropdown-search(ng-show="results.length && displaySearchResults", aria-labelledby="dropdownMenu3")
                                li.dropdown-header(ng-if="results.length" ng-repeat-start="category in results") {{ category.service }}
                                li(ng-repeat="item in category.results")
                                    a(href="{{ item.url }}") {{ item.label }}
                                li.divider(ng-repeat-end, role="separator")

                ul.nav.navbar-nav.navbar-right
                    li
                        a(href="#/demo") {{ "Demo" | translate }}
                    li
                        a(href="#/terms") {{ "terms" | translate }}
                    li
                        a(href="#/reporting") {{ "reporting" | translate }}
                    li.dropdown
                        a.dropdown-toggle(href="#/", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false") {{ "Language" | translate }}
                            span.caret
                        ul.dropdown-menu
                            li(ng-repeat="language in languages")
                                a(href="#/", ng-class="{ 'active': language.code == currentLanguage }", mydpp-language="{{ language.code }}") {{ language.label | translate }}
                    li
                        a.btn(href="#/login") Déconnexion